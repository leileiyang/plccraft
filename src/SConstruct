env = Environment(CCFLAGS='-g')
Export('env')
objs = []
src_files = Split("""ne_linuxcnc_ui_puma.cc
                     shcom.cc
                  """)
for subdir in ['fl', 'devices']:
  o = SConscript('%s/SConscript' % subdir)
  objs.extend(o)

src_files = src_files + objs
env.Program('fltask', src_files, 
        LIBS=['rt', 'm', 'nml', 'linuxcncini', 'linuxcnc', 'boost_serialization', 'zmq'],
        CPPPATH=['/usr/include/linuxcnc', '.'])
